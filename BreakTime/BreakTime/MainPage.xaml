<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BreakTime.MainPage" x:Name="frm">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,30">

            <Label x:Name="lblDisplay" Text="Start Break Timer" FontSize="Title" HorizontalOptions="Center" Padding="0,75"/>

            <Button  x:Name="btnFive" Text="Take 5" Clicked="btnFive_Clicked"/>
            <Button  x:Name="btnTen" Text="Take 10" Clicked="btnTen_Clicked"/>
            <Button  x:Name="btnFifeteen" Text="Take 15" Clicked="btnFifteen_Clicked"/>
            <Button  x:Name="btnReset" Text="Reset" Margin="0,80,0,0" Clicked="btnReset_Clicked"/>

            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

